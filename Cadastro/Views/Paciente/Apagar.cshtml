@model Paciente
@{
    ViewData["Title"] = "Apagar";
}
<div class="text-center">

    <h1 class="display-4">Deseja realmente apagar o paciente @Model.Name ?</h1>
</div>


<div class="text-center">
    <a role="button" class="btn btn-warning" asp-controller="Paciente" asp-action="Index">Cancelar</a>
    <a role="button" class="btn btn-danger" asp-controller="Paciente" asp-action="Deletar" asp-route-id="@Model.Id">Confirmar exclusão</a>
</div>


